<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxiFarePrediction.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry" x:Key="tripEntry">
                <Setter Property="BackgroundColor" Value="LightBlue"/>
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="WidthRequest" Value="250"/>
            </Style>

            <Style TargetType="Label" x:Key="tripLabel">
                <Setter Property="TextColor" Value="Orange"/>
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>

            <Style TargetType="Button" x:Key="tripButton">
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="ForestGreen"/>
            </Style>
                   
        </ResourceDictionary>
    </Application.Resources>
</Application>